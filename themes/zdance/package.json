{
  "name": "zdance-theme",
  "version": "1.0.0",
  "description": "WordPress theme for Zdance",
  "author": "John Saputo",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "node-sass": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "autoprefixer": "^9.8.6",
    "babel-plugin-istanbul": "^6.0.0",
    "bundlewatch": "^0.3.1",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^7.0.2",
    "glob": "^7.1.6",
    "linkinator": "^2.1.3",
    "lockfile-lint": "^4.3.7",
    "node-sass-import": "^2.0.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "qunit": "^2.11.3",
    "rollup": "^2.29.0",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "terser": "^4.8.0"
  },
  "scripts": {
    "copy-js": "cp ./node_modules/bootstrap/dist/js/bootstrap.bundle.min.js ./js/",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-main": "node-sass --importer node_modules/node-sass-import --output-style expanded --source-map true --source-map-contents true --precision 6 scss/ -o css/",
    "css-lint": "npm-run-all --continue-on-error --parallel css-lint-*",
    "css-lint-main": "stylelint \"scss/*.scss\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-main": "npm-run-all css-compile-main css-prefix-main css-minify-main",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output css/styles.min.css css/styles.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"css/*.css\" \"!css/*.min.css\"",
    "dist": "npm-run-all --parallel css",
    "lint": "npm-run-all --parallel css-lint lockfile-lint",
    "release": "npm-run-all dist",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch scss/ --ext scss --exec \"npm run css-main\""
  }
}
